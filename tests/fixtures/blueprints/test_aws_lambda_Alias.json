{
    "Outputs": {
        "Arn": {
            "Value": {
                "Ref": "Alias"
            }
        }
    },
    "Resources": {
        "Alias": {
            "Properties": {
                "Description": "The prod version of myFunction",
                "FunctionName": "myFunction",
                "FunctionVersion": {
                    "Fn::Sub": [
                        "arn:aws:lambda:${AWS::Region}:${AWS::AccountId}:function:${function_name}:${version}",
                        {
                            "function_name": "myFunction",
                            "function_version": "1"
                        }
                    ]
                },
                "Name": "prod"
            },
            "Type": "AWS::Lambda::Alias"
        }
    }
}